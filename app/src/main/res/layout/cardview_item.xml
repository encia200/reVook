<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardview_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/family_font"
                android:text="이메일" />

            <ImageView
                android:id="@+id/cardview_imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview_userId"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/cardview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_imageview"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/family_font"
                android:text="제목" />

            <TextView
                android:id="@+id/cardview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_title"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/family_font"
                android:text="내용" />

            <TextView
                android:id="@+id/cardview_starcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cardview_starButton_img"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/family_font"
                android:text=""
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/cardview_starButton_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_imageview"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/cardview_starcount"
                card_view:srcCompat="@drawable/ic_favorite_border_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>