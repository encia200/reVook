<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jy.revook_1111.chat.MessageActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageActivity_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageActivity_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        ></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:background="@drawable/linesquare"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
       >

        <EditText
            android:id="@+id/messageActivity_editText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/linesquare"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            />


        <Button
            android:id="@+id/messageActivity_button"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="SEND"
            android:textColor="@android:color/white"
            android:background="@drawable/linesquare_navy" />
    </LinearLayout>

</RelativeLayout>
