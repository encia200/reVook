<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jy.revook_1111.Fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/HomeFrag_linear1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="현재 독서중인 도서"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/HomeFrag_readingbook_text1"
            />

        <ImageView
            android:id="@+id/HomeFrag_readingbook_img"
            android:layout_below="@+id/HomeFrag_readingbook_text1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/HomeFrag_readingbook_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HomeFrag_readingbook_img"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10dp"
            android:text="책 제목"
            android:textSize="24dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/HomeFrag_linear1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        ></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/HomeFrag_linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/HomeFrag_readingbook_text2"
            android:text="도서 진행률"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/HomeFrag_readingbook_pages"
                android:layout_marginTop="20dp"
                android:text="324/600"
                android:textSize="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HomeFrag_readingbook_progress"
                android:text="51%"
                android:textSize="60dp"
                android:singleLine="true"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
